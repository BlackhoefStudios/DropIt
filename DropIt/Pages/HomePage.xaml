<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DropIt.Pages.HomePage">
  <ActivityIndicator IsVisible="{Binding IsLoggingIn}" IsRunning="{Binding IsLoggingIn}"
                     VerticalOptions="Center" HorizontalOptions="Center" />

  <ListView RefreshCommand="{Binding Refresh}" IsRefreshing="{Binding IsBusy}"
            ItemsSource="{Binding DataSource, Mode=TwoWay}"
            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Name}" Detail="{Binding TaskCount, StringFormat='Tasks Remaining: {0}'} ">
          <TextCell.ContextActions>
            <MenuItem Command="{Binding Delete}" CommandParameter="{Binding}"
               Text="Delete" IsDestructive="True" />
          </TextCell.ContextActions>
        </TextCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>